{
  "image": "mcr.microsoft.com/devcontainers/typescript-node:0-22",
  "postCreateCommand": "pnpm install",
    "remoteEnv": {
    "NPM_TOKEN": "${{ secrets.NPM_TOKEN }}"
  },
  "postAttachCommand": "pnpm dev",
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }

  },
  "waitFor": "onCreateCommand"
}
